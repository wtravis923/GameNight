@model IEnumerable<GameNight.Models.GameNightListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Game Times</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@if(TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">
        @ViewBag.SaveResult
        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
    </div>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Game.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Game.Genre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Location)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NoobsAllowed)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TutorialVideo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>

        @Html.HiddenFor(modelItem => item.GameTimeId)

        @Html.HiddenFor(modelItem => item.OwnerId)
        
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Genre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Location)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NoobsAllowed)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TutorialVideo)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.GameTimeId }) |
            @Html.ActionLink("Details", "Details", new { id = item.GameTimeId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.GameTimeId })
        </td>
    </tr>
}

</table>
