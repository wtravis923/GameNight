@model IEnumerable<GameNight.Models.GameNightListItem>

@{
    ViewBag.Title = "Index";
}

<div class="container col-md-8 cover">
    <h2>Game Times</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>

    @*@if (TempData.ContainsKey("SaveResult"))
    {
        <div class="alert alert-success fade in" role="alert">
            @ViewBag.SaveResult
            <button type="button" class="close" data-dismiss="alert">
                <span>&times;</span>
            </button>
        </div>
    }*@

    <div class="container col-md-12">
        <div class="row text-justify-content-md-center">
            <div class="col-lg-12 col-lg-auto">
            </div>
            <table class="table table-striped table-responsive-md btn-table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Game.Title)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Game.Genre)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DateTime)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Location)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.NoobsAllowed)                        
                    </tr>
                </thead>

                @foreach (var item in Model)
                {
                    <tbody>
                        <tr>

                            @Html.HiddenFor(modelItem => item.GameTimeId)

                            @Html.HiddenFor(modelItem => item.OwnerId)
                            @Html.HiddenFor(modelItem => item.Description)
                            @Html.HiddenFor(modelItem => item.TutorialVideo)

                            <td>
                                @Html.DisplayFor(modelItem => item.Title)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Genre)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DateTime)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Location)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NoobsAllowed)
                            </td>
                            <td>
                                <button type="button" class="btn btn-default">
                                    @Html.ActionLink("Details", "Details", new { id = item.GameTimeId })
                                </button>
                            </td>
                        </tr>
                    </tbody>
                }

            </table>
        </div>
    </div>
</div>