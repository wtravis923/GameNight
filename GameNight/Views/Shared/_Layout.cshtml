<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - GameNight!</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <h1 class="display-1 logo">Game Night!</h1>
    @if (User.Identity.IsAuthenticated)
     {
        <a href="~/Game/" class="mainlink"><span>My Games</span></a><br />
        <a href="~/GameNight/" class="mainlink"><span>Game Times</span></a><br />
        <a href="~/Gamer/" class="mainlink"><span>Gamers</span></a><br />
        <a href="javascript:document.getElementById('logoutForm').submit()" class="mainlink"><span>Log Off</span></a>
     } 

    @if (!User.Identity.IsAuthenticated)
     {
        <a href="~/Account/Login" class="mainlink"><span>Login</span></a><br />
        <a href="~/Account/Register" class="mainlink"><span>Register</span></a>
     }
    
    <div class="container body-content">

        @RenderBody()
        <hr />
        <footer>
            <div class="logoff">
                @Html.Partial("_LoginPartial")
            </div>
            <p>&copy; @DateTime.Now.Year - GameNight Web</p>
        </footer>

    </div>
    <div class="container-fluid">
        <img src="~/assets/boardgamebackground.jpg" class="bg" />
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
